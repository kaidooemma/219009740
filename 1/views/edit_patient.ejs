<%- include('partials/header.ejs') %>

<div class="container">
    <br>
    <h3><%= title %></h3>
    <form action="/patients/edit/<%=patient._id %>" method="POST">
        <div class="form-group">
            <label for="fname">First name:</label>
            <input type="text" class="form-control" id="fname" name="fname" value="<%= patient.fname %> "> 
        </div>
        <div class="form-group">
            <label for="lname">First name:</label>
            <input type="text" class="form-control" id="lname" name="lname" value="<%= patient.lname %> "> 
        </div>
        <div class="form-group">
            <input type="radio" id="male" name="gender" value="male">
            <label for="male">Male</label><br>
            <input type="radio" id="female" name="gender" value="<%=patient.gender  %> ">
            <label for="female">Female</label><br>
        </div>
        <div class="form-group">
            <label for="birthdate">Date of birth:</label>
            <input type="date" id="birthdate" name="birthdate" value="<%= patient.birthdate %> ">
        </div>
        <div class="form-group">
            <label for="address">Address:</label>
            <input type="text" class="form-control" id="address" name="address" value="<%=patient.address %>" > 
        </div>
        <div class="form-group">
            <label for="body">Phone:</label>
            <input type="text" class="form-control" id="phone" name="phone" value="<%= patient.phone %>"> </input>
        </div>
        <button type="submit" class="btn btn-success"> Submit </button>
    </form>
</div>

<%- include('partials/footer.ejs') %> 