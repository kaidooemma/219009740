<%- include('partials/header.ejs') %>

<!-- iterate through list of articles -->
<div class="container">
    <br>
    <ul class="list-group">
        <li class="list-group-item">Name: <%= patient.fname %> <%= patient.lname %></li>
        <li class="list-group-item">Phone: <%= patient.phone %></li>
        <li class="list-group-item">Balance: <%= patient.payments %></li>
    </ul>
    <form action="/patients/payments/<%=patient._id %>" method="POST">
        <div class="form-group">
            <label for="amt">Amount:</label>
            <input type="text" class="form-control" id="amt" name="amt"> 
        </div>
        
        <button type="submit" class="btn btn-success"> Submit </button>
    </form>


    
   
</div>
